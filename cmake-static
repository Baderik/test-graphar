    system
    filesystem
    thread
    date_time
    regex
    chrono
    atomic
)

message("WE FOUND BOOST: ${Boost_FOUND}")
message("-DBOOST_ROOT=${Boost_ROOT};\n-DBOOST_INCLUDE_DIR=${Boost_INCLUDE_DIRS};\n-DBOOST_LIBRARY=${Boost_LIBRARIES}")
list(GET Boost_LIBRARIES 0 Boost_LIBRARY_FIRST)

